<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_ingredient_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <EditText
        android:id="@+id/nameIngredientEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="26"
        android:hint="@string/hint_short_text_name_ingredient"
        android:textColor="?attr/colorText"
        android:textColorHint="?attr/colorHintText"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/countIngredientEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="13"
        android:hint="@string/hint_short_text_numbs"
        android:textColor="?attr/colorText"
        android:textColorHint="?attr/colorHintText"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinnerTypeIngredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="18"
        android:textColor="?attr/colorText"
        android:entries="@array/options_array" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:onClick="onDelIngredientButtonClick"
        android:scaleType="centerCrop"
        android:src="?attr/iconDelete" />

</LinearLayout>
