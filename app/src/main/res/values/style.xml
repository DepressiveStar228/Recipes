<resources>
    <!-- Brown -->
    <style name="AppTheme_Brown.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#B1B1B1</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorBackgroundRecyclerView">@color/grey</item>
        <item name="colorBackgroundMainMenu">@color/brown_lite</item>
        <item name="colorBackgroundItemMainMenu">@color/orange</item>
        <item name="colorBackgroundButton">@color/brown_lite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text color -->
        <item name="colorText">@color/black</item>
        <item name="colorHintText">@color/grey2</item>
        <item name="colorBackground">@color/white</item>
        <!-- EditText color. -->
        <item name="colorControlNormal">@color/black</item>
    </style>

